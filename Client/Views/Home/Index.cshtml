@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Клиент Rest API</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form method="get" asp-action="ProductView">
                    <br /><label class="form-label">ID записи или value/искомое значение:</label><br />
                    <input type="text" name="id" class="form-control" /><br /><br />
                    <input type="submit" value="Получить" class="btn btn-info" />
                    <input type="reset" value="Очистить" class="btn btn-danger" />
                </form>
            </div>
            <div class="col-md-6">
                <form method="post" asp-action="NewProduct">
                    <label class="form-label">строка JSON:<br /> <span style="font-size: 10px">Пример: [{"10": "Value 1"},{"5": "Value 2"},{"3": "Value 3"}]</span></label><br />
                    <input type="text" name="path" class="form-control" /><br /><br />
                    <input type="submit" value="Добавить" class="btn btn-success" />
                    <input type="reset" value="Очистить" class="btn btn-danger" /> 
                </form>
            </div>
        </div>
    </div>
</div>
